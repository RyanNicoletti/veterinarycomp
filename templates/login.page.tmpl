{{template "base" .}}
{{define "content"}}
<h2>Login</h2>
<form>
  <label for="email">
    Email: {{with .Form.Errors.Get "email"}}
    <label class="text-danger">{{.}}</label>
    {{ end }}
  </label>

  <input
    type="email"
    name="email"
    id="email"
    autocomplete="off"
    value=""
    required />
  <label for="password">
    Password: {{with .Form.Errors.Get "password"}}
    <label class="text-danger">{{.}}</label>
    {{ end }}
  </label>

  <input
    type="password"
    name="password"
    id="password"
    autocomplete="off"
    value=""
    required />
  <input type="submit" value="Submit" />
</form>
{{ end }}
